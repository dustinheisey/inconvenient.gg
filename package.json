{
  "name": "inconvenient.gg",
  "description": "Website for An Inconvenient Modpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/dustinheisey/inconvenient.gg.git"
  },
  "author": {
    "name": "Dustin Heisey"
  },
  "scripts": {
    "dev:site": "cd site && npx @11ty/eleventy --serve --quiet --incremental",
    "build:site": "cd site && rm -rf _site && npx @11ty/eleventy",
    "assets:site": "cd site && svgo -f ../common/media/svg -o ./_site/svg && pwa-asset-generator ./common/media/svg/favicon.svg ./_site/favicon --opaque false --favicon --type png --index && pwa-asset-generator ./common/media/svg/favicon.svg ./_site/favicon --background '#1a110f' --padding '15%' --icon-only && pwa-asset-generator ./common/media/svg/favicon.svg ./_site/favicon --background '#1a110f' --splash-only --type png --padding '10%'",
    "dev:wiki": "docusaurus start ./wiki",
    "swizzle:wiki": "cd wiki && docusaurus swizzle",
    "build:wiki": "docusaurus build ./wiki",
    "clear:wiki": "docusaurus clear ./wiki",
    "serve:wiki": "docusaurus serve ./wiki",
    "write-translations": "docusaurus write-translations ./wiki",
    "write-heading-ids": "docusaurus write-heading-ids ./wiki",
    "styles": "postcss common/styles/index.css -o ./common/index.min.css --watch",
    "scripts": "rollup -c rollup.config.js",
    "lint:js": "npx eslint --fix",
    "lint:css": "npx stylelint \"**/*.css\" --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier \"**/*.{cjs,html,js,json,md,njk,css}\" --write",
    "sb": "npx storybook dev --config-dir './common/.storybook'"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@docusaurus/core": "3.5.2",
    "@docusaurus/preset-classic": "3.5.2",
    "@mdx-js/react": "^3.0.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@storybook/addon-a11y": "^8.2.9",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "a11y-sitechecker": "^6.0.1",
    "clsx": "^2.0.0",
    "cssnano": "^6.0.1",
    "eleventy-critical-css": "^1.1.0",
    "eleventy-plugin-purgecss": "^0.4.0",
    "eleventy-plugin-pwa-v2": "^1.0.1",
    "eleventy-plugin-svg-sprite": "^2.4.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs": "^0.0.1-security",
    "html-minifier": "^4.0.0",
    "lit": "^3.2.0",
    "luxon": "^3.4.3",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "prism-react-renderer": "^2.3.0",
    "purgecss": "^5.0.0",
    "purgecss-from-html": "^6.0.0-alpha.0",
    "pwa-asset-generator": "^6.3.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "simple-nunjucks-loader": "^3.2.0",
    "storybook": "^8.2.9",
    "storybook-dark-mode": "^4.0.2",
    "stylelint-config-standard": "^34.0.0",
    "swizzle": "^1.1.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.5.2",
    "@docusaurus/types": "3.5.2",
    "@eslint/js": "^9.9.1",
    "@storybook/web-components-vite": "^8.2.9",
    "eslint": "^9.9.1",
    "globals": "^15.9.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "bracketSameLine": false,
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  }
}
