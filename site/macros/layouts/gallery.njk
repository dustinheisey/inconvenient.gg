{% from "../component.njk" import component %}
<div class="region theme-{{props.theme or 'background'}}">
    <div class="stack align-center {{props.class}}" style="padding-block-start: 0 !important;">
        {% if props.headline %}
        <section class="prose center stack align-center text-center gap-s">
            {% if props.overline %}
                <p class="overline">{{props.overline}}</p>
            {% endif %}
            <h2 class="page-headline">
                {{props.headline}}
            </h2>
            {% if props.body %}
            <p>{{props.body}}</p>
            {% endif %}
            {% if props.btn %}
            <a href="{{props.btn.url}}" class="btn {% if props.btn.variant %}{{props.btn.variant}}{% endif %} {% if props.btn.external === true %}external{% endif %}" {% if props.btn.external === true %}target="_blank"{% endif %}>
                {{props.btn.label}}
                {% if props.btn.external === true %}{% icon 'external-link' %}{% endif %}
            </a>
        {% endif %}
        </section>
        {% endif %}
        {% if props.variant === 'masonry' %}
            <div class="masonry col-3 gap-m">
                {% for item in props.items %}
                    {{ component(item) }}
                {% endfor %}
            </div>
        {% else %}
            <div class="cluster gap-m justify-center align-stretch">
                {% for item in props.items %}
                    {{ component(item) }}
                {% endfor %}
            </div> 
        {% endif %}
    </div>
</div>
