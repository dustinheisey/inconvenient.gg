{% if props.size === 'xl'  %}
<a href="{{props.url}}" class="prose stack content-center card card-icon card-link theme-{{props.theme}}">
        {% if props.icon %}{% icon props.icon, "icon icon-xl" %}{% endif %}
        <p>{{props.body}}</p>
    </a> 
    
{% elif props.url %}
       <a href="{{props.url}}" class="prose stack card card-link theme-{{props.theme}}">
        {% if props.icon %}{% icon props.icon, "icon icon-l" %}{% endif %}
        <h3 class="title-headline">{{props.headline}}</h3>
        <p>{{props.body}}</p>
    </a>
{% else %}
    <article class="{{class}} justify-start card theme-{{props.theme}}  {% if props.span %}span-{{props.span}}{% endif %} stack gap-xs">
            {% if props.variant === 'list' %}
                <ul class="stack gap-{{props.gap or 'm'}}">
                    {% for item in props.items %}
                    <li class="inline align-start gap-xs">
                        {% icon item.icon or props.icon, "icon-secondary" %}
                        {{item.text or item}}
                    </li>
                    {% endfor %}
                </ul>
            {% else %}
                {% if props.time %}
                    <div class="cluster">
                        <time datetime="{{props.time}}">{{props.label}}</time>
                    </div>
                {% endif %}
                <h3 class="title-headline">
                    {% if props.icon %}{% icon props.icon, "icon" %}{% endif %}
                    {{props.headline}}
                </h3>
                <p>
                    {{props.body}}
                </p>
            {% endif %}
    </article>
{% endif %}