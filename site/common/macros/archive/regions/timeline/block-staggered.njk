<div class="region stack theme-{{props.theme or 'background'}}">
    <section class="prose">
        <p class="overline">{{props.content.overline}}</p>
        <h2 class="region-headline">{{props.content.headline}}</h2>
    </section>
    <div class="timeline timeline-block timeline-staggered">
        {% for step in props.content.steps %}
        <div class="sparkline" aria-hidden="true"></div>
        <div class="stack gap-xs">
            <div class="prose">
                <h3 class="title-headline">{{step.headline}}</h3>
                <p>{{step.body}}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>