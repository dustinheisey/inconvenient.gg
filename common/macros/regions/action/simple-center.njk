<div class="cover cover-nav cover-s theme-{{props.theme or 'background'}}">
    <div class="principle region inset prose stack align-center text-center gap-xs {{props.classes}}">
        <p class="overline">{{props.content.overline}}</p>
        <h1>{{props.content.headline}}</h1>
        <p>
            {{props.content.body}}
        </p>
        <a href="{{props.content.btn.href}}" class="btn {% if props.content.btn.variant %}{{props.content.btn.href}}{% endif %}">{{props.content.btn.label}}</a>
    </div>
</div>